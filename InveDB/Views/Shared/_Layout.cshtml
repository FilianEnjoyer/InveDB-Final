<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pizzería Planet</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Tus estilos -->
    <link href="~/css/GestionarTablas.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- ===== Sidebar ===== -->
    <div class="d-flex">
        <div class="sidebar">
            <h3>Pizza Planet 🪐</h3>
            <a asp-controller="Inicio" asp-action="Index" class="@(ViewData["ActivePage"]?.ToString() == "Inicio" ? "active" : "")">Inicio</a>
            <a asp-controller="Inventario" asp-action="Index" class="@(ViewData["ActivePage"]?.ToString() == "Inventario" ? "active" : "")">Inventario</a>
            <a asp-controller="GestionarTablas" asp-action="Index" class="@(ViewData["ActivePage"]?.ToString() == "GestionarTablas" ? "active" : "")">Gestionar Tablas</a>
            <a asp-controller="Movimientos" asp-action="Index" class="@(ViewData["ActivePage"]?.ToString() == "Movimientos" ? "active" : "")">Registrar Entradas/Salidas</a>
                
        </div>

        <!-- ===== Contenido principal ===== -->
        <div class="content flex-grow-1 p-4">
            <header class="mb-4">
                <h3>@ViewData["Title"]</h3>
            </header>

            <main role="main" class="pb-3">
                @RenderBody()
            </main>

            <footer class="border-top mt-4 pt-3 text-muted">
                <p class="text-center">© @DateTime.Now.Year Pizza Planet - Sistema de Almacén</p>
            </footer>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
