<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pizza Planet</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/GestionarTablas.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div class="d-flex">
        <nav class="sidebar">
            <h3>Pizza Planet 🪐</h3>

            <!-- TODAS LAS VISTAS -->
            <a asp-controller="Inicio" asp-action="Index">Inicio</a>
            <a asp-controller="Inventario" asp-action="Index">Inventario</a>
            <a asp-controller="GestionarTablas" asp-action="Index">Gestionar Tablas</a>
            <a asp-controller="Movimientos" asp-action="Index">Registrar Entradas/Salidas</a>
            <a asp-controller="Usuarios" asp-action="Index">Usuarios</a>

            <a asp-controller="Login" asp-action="Logout" class="logout">Cerrar Sesión</a>
        </nav>

        <div class="content p-4 flex-grow-1">
            @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
